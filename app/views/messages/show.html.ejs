<div class="hero-unit">
  <h2><%= message.id %></h2>
  <%- linkTo('Edit this message', editMessagePath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>Message Properties</h2>
<% for(var i in message) { -%>
  <% if(i !== 'saved') { -%>
    <div class="row list-item">
      <div class="span8">
        <h3><%= i %></h3>
      </div>
      <div class="span4">
        <h3><i class="icon-list-alt"></i><%= message[i] %></h3>
      </div>
    </div>
  <% } -%>
<% } -%>