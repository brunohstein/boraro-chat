<div class="hero-unit">
  <form id="room-form" class="form-horizontal" action="/<%= params.user %>/rooms" method="POST" enctype="multipart/form-data">
    <fieldset>
      <legend>Create a new Room</legend>
      <% if(params.errors) { %>
      <div class="control-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>
      <%= partial('_form', {room: params}); %>
      <div class="form-actions">
        <%- contentTag('input', 'Add', {type: 'submit', class: 'btn btn-primary'}) %>
      </div>
    </fieldset>
  </form>
</div>
