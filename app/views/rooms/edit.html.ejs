<div class="hero-unit">
  <form id="room-form" class="align-center" action="/<%= params.user %>/<%= params.room %>?_method=PUT" method="POST">
    <fieldset>
      <% if(params.errors) { %>
      <div class="control-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>
      <%= partial('_form', {room: room}); %>
      <div class="form-actions">
        <%- contentTag('button', 'Remove', {type: 'submit', formaction: params.user + '/' + params.room + '?_method=DELETE', formmethod: 'POST', class: 'btn danger span3'}) %>
        <%- contentTag('input', 'Save', {type: 'submit', class: 'btn primary span3'}) %>
      </div>
    </fieldset>
  </form>
</div>
